<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEFFFFFF">

    <RelativeLayout
        android:id="@+id/someOneItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/someOneProfileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/someOneUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/someOneProfileImage"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/someOneProfileImage"
            android:text="@string/hsharma"
            android:textColor="#0097a7"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/txtFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/someOneProfileImage"
            android:layout_below="@+id/someOneUserName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/someOneProfileImage"
            android:maxLines="3"
            android:text="@string/harsh_sharma"
            android:textColor="#716e69"
            android:textSize="16sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/someOneItem"
        android:layout_marginLeft="60dp"
        android:background="#716e69" />
</RelativeLayout>